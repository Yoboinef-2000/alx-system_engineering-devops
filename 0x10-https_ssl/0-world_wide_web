# iHavetoHaveAFunctionasPertheAssignmentRequirement

get_info() {
    local sub=$1
    local result

    result=$(dig "$sub.$domain" | grep -A1 'ANSWER SECTION:')
    if [ -z "$result" ]; then
        echo "No information found for subdomain $sub"
        return
    fi

    local recordType=$(echo "$result" | tail -n 1 | awk '{print $4}')
    local destination=$(echo "$result" | tail -n 1 | awk '{print $5}')
    
    echo "The subdomain $sub is a $recordType record and points to $destination"
}

# If subdomain is provided, get info for that subdomain
if [ -n "$subdomain" ]; then
    get_info "www"
else
    # Otherwise, get info for all subdomains
    get_info "www"
    get_info "lb-01"
    get_info "web-01"
    get_info "web-02"
fi
